# Runtime
NODE_ENV=development
PORT=8080

# Database (PostgreSQL with PostGIS enabled)
DATABASE_URL=postgres://USER:PASS@HOST:5432/DB

# Polygon
RPC_URL=https://polygon-amoy.g.alchemy.com/v2/KEY
CHAIN_ID=80002
ADMIN_PRIVATE_KEY=0xYOUR_ADMIN_PRIVATE_KEY
CONTRACT_ADDRESS=0xYOUR_CONTRACT

# IPFS
IPFS_PROVIDER=pinata
IPFS_KEY=YOUR_PINATA_KEY
IPFS_SECRET=YOUR_PINATA_SECRET

# Business rules
DAILY_QUOTA=3
WEEKLY_QUOTA=10
QUEST_ENABLED=true
MIN_DISTINCT_LOCATIONS_FOR_THIRD_OF_DAY=2
