{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "types": ["node"],
    "paths": {
      "*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
